		double a, b, c, delta, x1, x2;
	      
	      System.out.println("Vamos calcular as raízes da equação de 2º grau. Para isso, informe os coeficientes.");
	      
	      System.out.println("Informe o valor do coeficiente a: ");
	      a = sc.nextDouble();
	         System.out.println("Informe o valor do coeficiente b: ");
	      b = sc.nextDouble();
	         System.out.println("Informe o valor do coeficiente c: ");
	      c = sc.nextDouble();
	        
	      delta = Math.pow(b,2) - 4 * a * c;
	      
	      x1 = (-b + Math.sqrt(delta))/2 * a;
	      x2 = (-b - Math.sqrt(delta))/2 * a;


	      System.out.println("Seu delta vale: "+delta);
	      System.out.println("Sua raízes são: x1 = "+x1+" e x2 = "+x2);
	      
	      
	      sc.close();
		
	}

}
